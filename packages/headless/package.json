{
  "name": "novel",
  "version": "1.0.0",
  "description": "Notion-style WYSIWYG editor with AI-powered autocompletions",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./client/core": {
      "types": "./dist/client/core.d.ts",
      "import": "./dist/client/core.js",
      "require": "./dist/client/core.cjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "lint": "biome lint ./src",
    "format": "biome format ./src "
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tiptap/core": "^3.15.3",
    "@tiptap/extension-code-block-lowlight": "^3.15.3",
    "@tiptap/extension-color": "^3.15.3",
    "@tiptap/extension-highlight": "^3.15.3",
    "@tiptap/extension-horizontal-rule": "^3.15.3",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-list": "^3.15.3",
    "@tiptap/extension-text-style": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/extension-youtube": "^3.15.3",
    "@tiptap/extensions": "^3.15.3",
    "@tiptap/markdown": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@tiptap/static-renderer": "^3.15.3",
    "@tiptap/suggestion": "^3.15.3",
    "@types/node": "^25.0.9",
    "cmdk": "^1.1.1",
    "jotai": "^2.16.2",
    "katex": "^0.16.27",
    "lowlight": "^3.3.0",
    "react-markdown": "^10.1.0",
    "react-moveable": "^0.56.0",
    "react-tweet": "^3.3.0",
    "tiptap-extension-global-drag-handle": "^0.1.18",
    "tunnel-rat": "^0.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/katex": "^0.16.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "19.2.3",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "author": "Andrew M",
  "homepage": "https://github.com/andrewmaspero/novel-v3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewmaspero/novel-v3.git"
  },
  "bugs": {
    "url": "https://github.com/andrewmaspero/novel-v3/issues"
  },
  "keywords": [
    "ai",
    "novel",
    "editor",
    "markdown",
    "nextjs",
    "react"
  ]
}