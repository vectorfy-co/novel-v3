{
  "name": "novel-v3",
  "private": true,
  "scripts": {
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "turbo build && changeset version",
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "turbo format --continue --",
    "format:fix": "turbo format --continue -- --write",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --apply",
    "test": "pnpm -r test --if-present",
    "ci:test": "pnpm -w test && pnpm --filter novel-next-app test:e2e",
    "clean": "turbo clean",
    "release": "turbo run release",
    "prepare": "husky",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.3"
  },
  "packageManager": "pnpm@9.5.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "postcss": "^8.5.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ],
      "body-max-line-length": [
        0,
        "always",
        100
      ]
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "@daybrush/utils@1.13.0": "patches/@daybrush__utils@1.13.0.patch"
    }
  }
}